@model IEnumerable<Game>
@{
    ViewData["Title"] = "Home Page";
}

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">Not Found Game!</h4>
        <p class="mb-0"> Not Added Game Yet</p>
    </div>
}
else
{
    <div class="row mt-5">
        @foreach(var game in Model)
        {
            <div class="col-md-6 col-lg-4">
                <a class="card border-success mb-3 text-decoration-none rounded-3 overflow-hidden" asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">
                    <div class="card-body card-image-body" style="background-image:url(@($"{FileSettings.imagesPath}/{game.Cover}")); ">
                        <div class="d-flex align-items-end h-100">
                            <span class="badge rounded-pill bg-success fs-3">@game.Category.Name</span>
                        </div>
                    </div>
                    <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                        <h5>@game.Name</h5>
                       <div>
                            @foreach(var device in game.Devices)
                            {
                                <i class="@($"{device.Device.Icon}") me-2 fs-4"></i>
                            }
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}


